<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
	
	<bean id="servlet" class="org.apache.camel.component.servlet.ServletComponent">
			<property name="servletName" value="CamelServlet-${artifactId}"/>
	</bean>

	<camelContext id="${artifactId}" xmlns="http://camel.apache.org/schema/spring">

		<packageScan>
			<package>${package}</package>
		</packageScan>

		<rest id="restsvc" path="/restsvc" bindingMode="off" produces="application/json">
			<get id="getPing" uri="/ping">
				<route id="getPingRoute">
					<setBody>
						<constant>{"msg" : "ok"}</constant>
					</setBody>
				</route>
			</get>
		</rest>

		<route id="timerRoute">
			<from id="timerRouteStarter" uri="timer:test" />
			<log id="logHelloWorld" message="hello world from ${artifactId}" />
		</route>

		<route id="http-receiver">
			<from id="http-receiver-starter" uri="servlet://ping" />
			<setHeader headerName="Content-Type">
				<constant>application/json</constant>
			</setHeader>
			<setBody>
				<constant>{"msg" : "HELLO"}</constant>
			</setBody>
		</route>

	</camelContext>
</beans>
